{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "@biagram/shared": ["./packages/shared/src"],
      "@biagram/shared/*": ["./packages/shared/src/*"],
      "@biagram/dbml-parser": ["./packages/dbml-parser/src"],
      "@biagram/dbml-parser/*": ["./packages/dbml-parser/src/*"],
      "@biagram/diagram-engine": ["./packages/diagram-engine/src"],
      "@biagram/diagram-engine/*": ["./packages/diagram-engine/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo"
  ]
}